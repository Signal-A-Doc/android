<layout xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/callType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:drawableStart="@mipmap/ic_call_s"
            android:drawablePadding="@dimen/_5sdp"
            android:text="Phone Call"
            android:textColor="@color/DarkBluebg"
            android:textSize="@dimen/_18ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/callToTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call To: John Bigman"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintStart_toStartOf="@+id/callType"
            app:layout_constraintTop_toBottomOf="@id/callType" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/costTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_5sdp"
            android:text="â‚¦1,000"
            android:textColor="@color/DarkBluebg"
            android:textSize="@dimen/_20ssp"
            app:layout_constraintBottom_toBottomOf="@id/callType"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/callType" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_5sdp"
            android:text="12:00 PM | 05-02-2020"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintBottom_toBottomOf="@id/callToTV"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/callToTV" />


        <View
            android:id="@+id/viewLine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@color/GrayLight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/callToTV" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
