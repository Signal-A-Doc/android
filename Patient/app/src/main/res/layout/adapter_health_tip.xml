<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
       >

    <androidx.cardview.widget.CardView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/_10sdp"
        android:elevation="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_10sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_10sdp"
            android:layout_width="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/healthIV"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/health"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/healthHeadingTV"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_width="0dp"
                android:text="Tips to keep your family safe during the Corona Virus outbreak"
                android:textColor="#5b5b5b"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/healthIV"
                app:layout_constraintTop_toTopOf="@id/healthIV" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/healthContentTV"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="0dp"
                android:text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor"
                android:textColor="#5b5b5b"
                android:textSize="@dimen/_8ssp"
                app:layout_constraintBottom_toBottomOf="@id/healthIV"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/healthHeadingTV" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/docNameTV"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="wrap_content"
                android:text="Dr.Blessing Ahmed"
                android:textSize="@dimen/_8ssp"
                app:layout_constraintStart_toStartOf="@id/healthIV"
                app:layout_constraintTop_toBottomOf="@id/healthIV" />

            <androidx.appcompat.widget.AppCompatTextView
                android:drawablePadding="@dimen/_5sdp"
                android:drawableStart="@mipmap/ic_like"
                android:gravity="center"
                android:id="@+id/likeTV"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:text="15"
                app:layout_constraintBottom_toBottomOf="@id/docNameTV"
                app:layout_constraintStart_toStartOf="@+id/healthContentTV"
                app:layout_constraintTop_toTopOf="@id/docNameTV" />


            <androidx.appcompat.widget.AppCompatTextView
                android:drawablePadding="@dimen/_5sdp"
                android:drawableStart="@mipmap/ic_comment"
                android:gravity="center"
                android:id="@+id/commentTV"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_width="wrap_content"
                android:text="15"
                app:layout_constraintBottom_toBottomOf="@id/likeTV"
                app:layout_constraintStart_toEndOf="@+id/likeTV"
                app:layout_constraintTop_toTopOf="@id/likeTV" />


            <androidx.appcompat.widget.AppCompatTextView
                android:drawablePadding="@dimen/_5sdp"
                android:drawableStart="@mipmap/ic_view"
                android:gravity="center"
                android:id="@+id/viewTV"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_width="wrap_content"
                android:text="15"
                app:layout_constraintBottom_toBottomOf="@id/likeTV"
                app:layout_constraintStart_toEndOf="@+id/commentTV"
                app:layout_constraintTop_toTopOf="@id/likeTV" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>


