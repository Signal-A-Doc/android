<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.fragment.AboutUs">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/abouUsTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:text="@string/lorem_ipsum_is_simply_dummy_text_of_the_printing_and_typesetting_industry_lorem_ipsum_has_been_the_industry_s_standard_dummy_text_ever_since_the_1500s_when_an_unknown_printer_took_a_galley_of_type_and_scrambled_it_to_make_a_type_specimen_book_it_has_survived_not_only_five_centuries_but_also_the_leap_into_electronic_typesetting_remaining_essentially_unchanged"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <View
                android:id="@+id/viewLine"
                android:layout_width="0dp"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:background="@color/GrayLight"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/abouUsTV" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/contactUsTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/contact_us"
                android:textColor="@color/DarkBluebg"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/viewLine"
                app:layout_constraintTop_toBottomOf="@id/viewLine" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/callIconIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:src="@mipmap/ic_contact"
                app:layout_constraintStart_toStartOf="@id/contactUsTV"
                app:layout_constraintTop_toBottomOf="@id/contactUsTV" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/phoneNoTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:text="+2340948248722"
                android:textSize="@dimen/_15ssp"
                app:layout_constraintBottom_toBottomOf="@id/callIconIV"
                app:layout_constraintStart_toEndOf="@id/callIconIV"
                app:layout_constraintTop_toTopOf="@id/callIconIV" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/emailIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@mipmap/ic_email"
                app:layout_constraintStart_toStartOf="@id/contactUsTV"
                app:layout_constraintTop_toBottomOf="@id/callIconIV" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/mailTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:text="contactus@signaladoc.com"
                android:textSize="@dimen/_15ssp"
                app:layout_constraintBottom_toBottomOf="@id/emailIV"
                app:layout_constraintStart_toEndOf="@id/callIconIV"
                app:layout_constraintTop_toTopOf="@id/emailIV" />


            <View
                android:id="@+id/viewLineTwo"
                android:layout_width="0dp"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:background="@color/GrayLight"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mailTV" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/socialMediaTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/social_media"
                android:textColor="@color/DarkBluebg"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/viewLineTwo"
                app:layout_constraintTop_toBottomOf="@id/viewLineTwo" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/instagramIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@mipmap/ic_insta"
                app:layout_constraintStart_toStartOf="@id/socialMediaTV"
                app:layout_constraintTop_toBottomOf="@id/socialMediaTV" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/instaTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:text="@string/instagram"
                android:textSize="@dimen/_15ssp"
                app:layout_constraintBottom_toBottomOf="@id/instagramIV"
                app:layout_constraintStart_toEndOf="@id/instagramIV"
                app:layout_constraintTop_toTopOf="@id/instagramIV" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/twitterIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@mipmap/ic_twitter"
                app:layout_constraintStart_toStartOf="@id/socialMediaTV"
                app:layout_constraintTop_toBottomOf="@id/instagramIV" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/twitterTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/twitter"
                android:textSize="@dimen/_15ssp"
                app:layout_constraintBottom_toBottomOf="@id/twitterIV"
                app:layout_constraintStart_toStartOf="@id/instaTV"
                app:layout_constraintTop_toTopOf="@id/twitterIV" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/facebookIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@mipmap/ic_facebook"
                app:layout_constraintStart_toStartOf="@id/socialMediaTV"
                app:layout_constraintTop_toBottomOf="@id/twitterIV" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/facebookTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/facecook"
                android:textSize="@dimen/_15ssp"
                app:layout_constraintBottom_toBottomOf="@id/facebookIV"
                app:layout_constraintStart_toStartOf="@id/instaTV"
                app:layout_constraintTop_toTopOf="@id/facebookIV" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>