<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/doctorIV"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
             android:layout_margin="@dimen/_15sdp"
            android:background="@mipmap/ic_doctor"
           app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11:32 AM"
            android:inputType="time"
            android:layout_marginStart="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="@+id/doctorIV"
            app:layout_constraintStart_toEndOf="@+id/doctorIV"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/messageTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/_25sdp"
            android:maxWidth="@dimen/_230sdp"
            android:textColor="@color/White"
            android:gravity="start"
            android:padding="@dimen/_9sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Hello i am Dr"
            android:textSize="@dimen/_12ssp"
            android:background="@drawable/chat_blue"
            app:layout_constraintStart_toStartOf="@+id/doctorIV"
            app:layout_constraintTop_toBottomOf="@+id/doctorIV"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/replyTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/_25sdp"
            android:maxWidth="@dimen/_230sdp"
            android:gravity="start"
            android:textSize="@dimen/_12ssp"

            android:padding="@dimen/_9sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Hello i am Dr ksjd ndhd jiohdn ndqhiwn uihjn ihnj hkndn ndjhdiq "
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/reply_light_voilet"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/messageTV"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11:32 AM"
            android:inputType="time"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/replyTV"
            app:layout_constraintEnd_toEndOf="@+id/replyTV"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>