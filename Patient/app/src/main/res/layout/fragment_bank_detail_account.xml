<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/greenV"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_margin="@dimen/_20sdp"
            android:background="@drawable/box_green_clicked"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/editTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:text="@string/edit"
            android:lineSpacingExtra="@dimen/_8sp"
            android:fontFamily="@font/circularstd_book"
            android:textColor="@color/MediumBlue"
            android:textSize="@dimen/_8sp"
            app:layout_constraintEnd_toEndOf="@+id/greenV"
            app:layout_constraintTop_toTopOf="@+id/greenV" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/accountNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/circularstd_book"
            android:layout_marginStart="@dimen/_20sdp"
            android:lineSpacingExtra="@dimen/_3sp"
            android:text="@string/account_name"
            android:textSize="@dimen/_8sp"
            app:layout_constraintStart_toStartOf="@+id/greenV"
            app:layout_constraintTop_toBottomOf="@+id/editTV" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/nameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adewale ramode shitu"
            android:textSize="@dimen/_10sp"
            android:lineSpacingExtra="@dimen/_4sp"
            android:textAllCaps="true"
            android:textColor="@color/DarkBluebg"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/accountNameTV"
            app:layout_constraintStart_toStartOf="@id/accountNameTV"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/accountNumTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="Account Number"
            app:layout_constraintStart_toStartOf="@+id/greenV"
            app:layout_constraintTop_toBottomOf="@+id/nameTV" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/numTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02134617463"
            android:textAllCaps="true"
            android:textColor="@color/DarkBluebg"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/accountNumTV"
            app:layout_constraintStart_toStartOf="@id/accountNumTV"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/BankTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:text="Bank"
            android:layout_marginTop="@dimen/_20sdp"

            app:layout_constraintStart_toStartOf="@+id/greenV"
            app:layout_constraintTop_toBottomOf="@+id/numTV" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bank"
            android:textAllCaps="true"
            android:textColor="@color/DarkBluebg"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/BankTV"
            app:layout_constraintStart_toStartOf="@id/accountNameTV"/>
        <View
            android:id="@+id/blueBoxV"
            android:layout_width="0dp"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/blue_border_box"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintStart_toStartOf="@id/greenV"
            app:layout_constraintEnd_toEndOf="@id/greenV"
            app:layout_constraintTop_toBottomOf="@id/greenV"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD BANK"
            android:textColor="@color/MediumBlue"
            android:textSize="@dimen/_15ssp"
            android:drawablePadding="@dimen/_5sdp"
            android:drawableStart="@drawable/ic_add_black_24dp"
            app:layout_constraintTop_toTopOf="@+id/blueBoxV"
            app:layout_constraintBottom_toBottomOf="@id/blueBoxV"
            app:layout_constraintStart_toStartOf="@id/blueBoxV"
            app:layout_constraintEnd_toEndOf="@id/blueBoxV"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>