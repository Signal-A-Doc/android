<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/White">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/letsSetupTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/circularstd_bold"
            android:lineSpacingExtra="@dimen/_8sp"
            android:text="@string/let_s_setup_your_n_health_profile"
            android:textColor="@color/Neon"
            android:textSize="@dimen/_20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/theNextTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/circularstd_book"
            android:lineSpacingExtra="@dimen/_6sp"
            android:text="@string/the_next_few_question_will_ask_about_n_your_medical_history"
            android:textColor="@color/SkipColor"
            android:textSize="@dimen/_15sp"
            app:layout_constraintStart_toStartOf="@id/letsSetupTV"
            app:layout_constraintTop_toBottomOf="@id/letsSetupTV" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/healthIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:src="@mipmap/ic_health_profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/theNextTV" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/itIsImportantTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            android:fontFamily="@font/circularstd_bold"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/_6sp"
            android:text="@string/it_is_important_you_complete_this_profile_so_n_your_doctor_can_get_to_know_you_more"
            android:textColor="@color/avalibale_color"
            android:textSize="@dimen/_15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/healthIV" />


        <com.signalDoc_patient.utils.CustomButton
            android:id="@+id/continueBT"
            android:layout_width="0dp"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@drawable/button_blue_shape"
            android:letterSpacing="0.1"
            android:lineSpacingExtra="@dimen/_3sp"
            android:text="@string/continue_"
            android:textColor="@color/White"
            android:textSize="@dimen/_15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itIsImportantTv" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>