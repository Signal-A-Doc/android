<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/DarkBluebg">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_70sdp"
            android:background="@mipmap/ic_done"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/congTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="Email sent"
            android:textColor="@color/BlueLight"
            android:textSize="@dimen/_28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageIV" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/createdTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
             android:gravity="center"
            android:text="An email with a reset link as been sent to the provided email address"
            android:textColor="@color/White"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintEnd_toEndOf="@+id/backBT"
            app:layout_constraintStart_toStartOf="@+id/backBT"
            app:layout_constraintTop_toBottomOf="@+id/congTV" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/backBT"
            android:layout_width="0dp"
            android:layout_height="@dimen/_45sdp"
            android:layout_margin="@dimen/_30sdp"
            android:background="@drawable/corner_blue_bt"
            android:text="go back"
            android:textColor="@color/White"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/createdTV" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>