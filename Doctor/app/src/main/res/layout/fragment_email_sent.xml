<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/DarkBluebg">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_70sdp"
            android:background="@mipmap/ic_done"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/congTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/email_sent"
            android:textColor="@color/BlueLight"
            android:textSize="@dimen/_22sdp"
            android:textStyle="bold"
             android:lineSpacingExtra="@dimen/_8sp"
            android:fontFamily="@font/circularstd_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageIV" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/createdTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"

            android:text="@string/an_email_with_a_reset_link_as_been_sent_to_the_provided_email_address"
            android:textColor="@color/White"
            android:textSize="@dimen/_12sp"
            android:gravity="center"
            android:fontFamily="@font/circularstd_book"
            android:lineSpacingExtra="@dimen/_4sp"
            app:layout_constraintEnd_toEndOf="@+id/backBT"
            app:layout_constraintStart_toStartOf="@+id/backBT"
            app:layout_constraintTop_toBottomOf="@+id/congTV" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/backBT"
            android:layout_width="0dp"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginStart="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/corner_blue_bt"
            android:text="@string/go_back"
            android:textColor="@color/White"
            android:fontFamily="@font/rubik_regular"
            android:textSize="@dimen/_12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/createdTV" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>