<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.fragment.HealthTipsDetailFragment">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_documents"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_20sdp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/contentHeadTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tips to keep your family safe during the Corona Virus outbreak"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:textSize="@dimen/_17ssp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/imgIV"
                android:layout_marginTop="@dimen/_10sdp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/docProfileIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@mipmap/ic_documents"
                app:layout_constraintStart_toStartOf="@+id/contentHeadTV"
                app:layout_constraintTop_toBottomOf="@id/contentHeadTV"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Dr. Blessing Ahmed"
                android:textSize="@dimen/_12ssp"
                android:drawablePadding="@dimen/_10sdp"
                android:gravity="center"/>

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/GrayLight"
                app:layout_constraintTop_toBottomOf="@id/docProfileIV"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintStart_toStartOf="@id/docProfileIV"
                app:layout_constraintEnd_toEndOf="@id/contentHeadTV"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/contentTV"
