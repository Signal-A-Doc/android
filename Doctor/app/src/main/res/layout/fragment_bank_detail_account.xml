<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/greenV"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_margin="@dimen/_20sdp"
            android:background="@drawable/box_green_clicked"
            android:padding="@dimen/_20sdp"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/editTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:fontFamily="@font/circularstd_book"
            android:lineSpacingExtra="@dimen/_6sp"
            android:text="@string/edit"
            android:textColor="@color/MediumBlue"
            android:textSize="@dimen/_12sp"
            app:layout_constraintEnd_toEndOf="@+id/greenV"
            app:layout_constraintTop_toTopOf="@+id/greenV" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/accountNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:fontFamily="@font/circularstd_book"
            android:lineSpacingExtra="@dimen/_3sp"
            android:text="@string/account_name"
            android:textColor="@color/SkipColor"
            android:textSize="@dimen/_8sp"
            app:layout_constraintStart_toStartOf="@+id/greenV"
            app:layout_constraintTop_toBottomOf="@+id/editTV" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/nameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/circularstd_black"
            android:lineSpacingExtra="@dimen/_4sp"
            android:text="Adewale ramode shitu"
            android:textAllCaps="true"
            android:textColor="@color/DarkBluebg"
            android:textSize="@dimen/_12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/accountNameTV"
            app:layout_constraintTop_toBottomOf="@+id/accountNameTV" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/accountNumTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/circularstd_book"
            android:lineSpacingExtra="@dimen/_3sp"
            android:text="@string/account_number"
            android:textColor="@color/SkipColor"
            android:textSize="@dimen/_12sp"
            app:layout_constraintStart_toStartOf="@+id/greenV"
            app:layout_constraintTop_toBottomOf="@+id/nameTV" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/numTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/circularstd_black"
            android:lineSpacingExtra="@dimen/_4sp"
            android:text="02134617463"
            android:textAllCaps="true"
            android:textColor="@color/DarkBluebg"
            android:textSize="@dimen/_12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/accountNumTV"
            app:layout_constraintTop_toBottomOf="@+id/accountNumTV" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/BankTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/circularstd_book"
            android:lineSpacingExtra="@dimen/_3sp"
            android:text="@string/bank"
            android:textColor="@color/SkipColor"
            android:textSize="@dimen/_12sp"
            app:layout_constraintStart_toStartOf="@+id/greenV"
            app:layout_constraintTop_toBottomOf="@+id/numTV" />


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/circularstd_black"
            android:lineSpacingExtra="@dimen/_4sp"
            android:text="Guaranty trust Bank"
            android:textAllCaps="true"
            android:textColor="@color/DarkBluebg"
            android:textSize="@dimen/_12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/accountNameTV"
            app:layout_constraintTop_toBottomOf="@+id/BankTV" />


        <com.signalDoc_doctor.utils.RubicRegularTextView
            android:layout_width="0dp"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/blue_border_box"
            android:drawablePadding="@dimen/_5sdp"
            android:gravity="center"
            android:text="@string/add_bank"
            android:textColor="@color/MediumBlue"
            android:textSize="@dimen/_16sp"
            app:layout_constraintEnd_toEndOf="@id/greenV"
            app:layout_constraintStart_toStartOf="@id/greenV"
            app:layout_constraintTop_toBottomOf="@id/greenV" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>